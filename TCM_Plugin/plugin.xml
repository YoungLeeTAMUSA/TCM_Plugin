<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="NET.THECODEMASTER.EVD.UI.VIEW.CATEGORY"
            name="%view.category.name">
      </category>
      <view
            category="NET.THECODEMASTER.EVD.UI.VIEW.CATEGORY"
            class="net.thecodemaster.evd.ui.view.ViewSecurityVulnerabilities"
            icon="icon/View.png"
            id="NET.THECODEMASTER.EVD.UI.VIEW"
            name="%view.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="NET.THECODEMASTER.EVD.UI.VIEW"
               minimized="false"
               ratio="0.5"
               relationship="bottom"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="NET.THECODEMASTER.EVD.UI.PREFERENCES"
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.thecodemaster.evd.ui.preference.page.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="net.thecodemaster.evd.ui.preference.page.Acknowledgements"
            id="NET.THECODEMASTER.EVD.UI.PREFERENCE.PAGE.ACKNOWLEDGEMENTS"
            name="%preference.page.acknowledgements">
         <keywordReference
               id="NET.THECODEMASTER.EVD.UI.KEYWORDS">
         </keywordReference>
      </page>
      <page
            category="NET.THECODEMASTER.EVD.UI.PREFERENCE.PAGE.ACKNOWLEDGEMENTS"
            class="net.thecodemaster.evd.ui.preference.page.Settings"
            id="NET.THECODEMASTER.EVD.UI.PREFERENCE.PAGE.SETTINGS"
            name="%preference.page.settings">
      </page>
      <page
            category="NET.THECODEMASTER.EVD.UI.PREFERENCE.PAGE.ACKNOWLEDGEMENTS"
            class="net.thecodemaster.evd.ui.preference.page.SecurityVulnerabilities"
            id="NET.THECODEMASTER.EVD.UI.PREFERENCE.PAGE.SECURITY_VULNERABILITIES"
            name="%preference.page.security_vulnerabilities">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="NET.THECODEMASTER.EVD.UI.KEYWORDS"
            label="%preference.page.tcm_evd.keyword">
      </keyword>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <menu
               icon="icon/Menu.png"
               id="NET.THECODEMASTER.EVD.UI.MENU.ROOT"
               label="%menu.tcm_evd">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <or>
                        <instanceof
                              value="org.eclipse.core.resources.IResource">
                        </instanceof>
                        <instanceof
                              value="org.eclipse.jdt.core.IJavaElement">
                        </instanceof>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
            <command
                  commandId="net.thecodemaster.evd.ui.command.enable_plugin"
                  label="%menu.enable_plugin.label"
                  style="push"
                  tooltip="%menu.enable_plugin.tooltip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <test
                           forcePluginActivation="true"
                           property="net.thecodemaster.evd.ui.propertytester.isEnabled">
                     </test>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="net.thecodemaster.evd.ui.command.disable_plugin"
                  label="%menu.disable_plugin.label"
                  style="push"
                  tooltip="%menu.disable_plugin.tooltip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <test
                           forcePluginActivation="true"
                           property="net.thecodemaster.evd.ui.propertytester.isDisabled">
                     </test>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="net.thecodemaster.evd.ui.command.open_settings"
                  label="%menu.open_settings.label"
                  style="push"
                  tooltip="%menu.open_settings.tooltip">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="net.thecodemaster.evd.ui.command.EnableScanOnProject"
            id="net.thecodemaster.evd.ui.command.enable_plugin"
            name="%menu.enable_plugin.label">
      </command>
      <command
            defaultHandler="net.thecodemaster.evd.ui.command.DisableScanOnProject"
            id="net.thecodemaster.evd.ui.command.disable_plugin"
            name="%menu.disable_plugin.label">
      </command>
      <command
            defaultHandler="net.thecodemaster.evd.ui.command.OpenSettingsPreferencePage"
            id="net.thecodemaster.evd.ui.command.open_settings"
            name="%menu.open_settings.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="net.thecodemaster.evd.ui.propertytester.EnableDisableMenu"
            id="NET.THECODEMASTER.EVD.UI.PROPERTYTESTER.ENABLEDISABLEMENU"
            namespace="net.thecodemaster.evd.ui.propertytester"
            properties="isEnabled, isDisabled"
            type="org.eclipse.jface.viewers.ISelection">
      </propertyTester>
   </extension>
   <extension
         id="TCM_EVD_BUILDER"
         name="TCM_EVD Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="net.thecodemaster.evd.builder.IncrementalBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="TCM_EVD_NATURE"
         name="TCM_EVD Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="net.thecodemaster.evd.nature.Nature">
         </run>
      </runtime>
      <builder
            id="TheCodeMasterEarlyVulnerabilityDetector.TCM_EVD_BUILDER">
      </builder>
   </extension>
   <extension
         id="TCM_EVD_MARKER"
         name="Security Vulnerability"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <attribute
            name="TCM_EVD_TYPE_SECURITY_VULNERABILITY">
      </attribute>
   </extension>
   <extension
         id="TCM_EVD_MARKER_RESOLUTION"
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="net.thecodemaster.evd.marker.SecurityVulnerabilityResolutionGenerator"
            markerType="TheCodeMasterEarlyVulnerabilityDetector.TCM_EVD_MARKER">
      </markerResolutionGenerator>
   </extension>
   <extension
         id="TCM_EVD_MARKER_ANNOTATION"
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="1"
            markerType="TheCodeMasterEarlyVulnerabilityDetector.TCM_EVD_MARKER"
            name="TheCodeMasterEarlyVulnerabilityDetector.TCM_EVD_MARKER_ANNOTATION">
      </type>
   </extension>
   <extension
         id="TCM_EVD_MARKER_ANNOTATION_SPECIFICATION"
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
			annotationType="TheCodeMasterEarlyVulnerabilityDetector.TCM_EVD_MARKER_ANNOTATION"
			colorPreferenceKey="org.eclipse.viatra2.slice.color" colorPreferenceValue="243,199,64"
			contributesToHeader="false" highlightPreferenceKey="org.eclipse.viatra2.slice.highlight"
			highlightPreferenceValue="true" icon="icons/Warning.png"
			includeOnPreferencePage="true" isGoToNextNavigationTarget="true"
			isGoToNextNavigationTargetKey="TCM_EVD_IsGoToNextNavigationTarget"
			isGoToPreviousNavigationTarget="true"
			isGoToPreviousNavigationTargetKey="TCM_EVD_IsGoToPreviousNavigationTarget"
			label="TCM Early Vulnerability Detector Warnings" overviewRulerPreferenceKey="org.eclipse.viatra2.slice.overview"
			overviewRulerPreferenceValue="true" presentationLayer="0"
			quickFixIcon="icons/QuickFix.png" showInNextPrevDropdownToolbarAction="true"
			showInNextPrevDropdownToolbarActionKey="TCM_EVD_ShowInNextPrevDropdownToolbarAction"
			symbolicIcon="warning" textPreferenceKey="org.eclipse.viatra2.slice.text"
			textPreferenceValue="true" textStylePreferenceKey="TCM_EVD_TextStylePreference"
			textStylePreferenceValue="PROBLEM_UNDERLINE" verticalRulerPreferenceKey="org.eclipse.viatra2.slice.ruler"
			verticalRulerPreferenceValue="true">
		</specification>
   </extension>

</plugin>
