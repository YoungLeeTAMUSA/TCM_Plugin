<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="TheCodeMasterSecurityAnalyzerPlugin"
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.thecodemaster.sap.ui.preference.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="net.thecodemaster.sap.ui.preference.page.Acknowledgements"
            id="net.thecodemaster.sap.ui.preference.page.acknowledgements"
            name="%preference.page.acknowledgements">
         <keywordReference
               id="net.thecodemaster.sap.ui.keywords">
         </keywordReference>
      </page>
      <page
            category="net.thecodemaster.sap.ui.preference.page.acknowledgements"
            class="net.thecodemaster.sap.ui.preference.page.Settings"
            id="net.thecodemaster.sap.ui.preference.page.settings"
            name="%preference.page.settings">
      </page>
      <page
            category="net.thecodemaster.sap.ui.preference.page.acknowledgements"
            class="net.thecodemaster.sap.ui.preference.page.SecurityVulnerabilities"
            id="net.thecodemaster.sap.ui.preference.page.security_vulnerabilities"
            name="%preference.page.security_vulnerabilities">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="net.thecodemaster.sap.ui.keywords"
            label="%preference.page.tcmsap.keyword">
      </keyword>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <menu
               id="net.thecodemaster.sap.ui.menu.root"
               label="%menu.tcmsap">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <or>
                        <instanceof
                              value="org.eclipse.core.resources.IResource">
                        </instanceof>
                        <instanceof
                              value="org.eclipse.jdt.core.IJavaElement">
                        </instanceof>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
            <command
                  commandId="net.thecodemaster.sap.ui.command.enable_plugin"
                  label="%menu.enable_plugin.label"
                  style="push"
                  tooltip="%menu.enable_plugin.tooltip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <test
                           forcePluginActivation="true"
                           property="net.thecodemaster.sap.ui.propertytester.isEnabled">
                     </test>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="net.thecodemaster.sap.ui.command.disable_plugin"
                  label="%menu.disable_plugin.label"
                  style="push"
                  tooltip="%menu.disable_plugin.tooltip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <test
                           forcePluginActivation="true"
                           property="net.thecodemaster.sap.ui.propertytester.isDisabled">
                     </test>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="net.thecodemaster.sap.ui.command.open_settings"
                  label="%menu.open_settings.label"
                  style="push"
                  tooltip="%menu.open_settings.tooltip">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="net.thecodemaster.sap.ui.commands.EnableScanOnProject"
            id="net.thecodemaster.sap.ui.command.enable_plugin"
            name="%menu.enable_plugin.label">
      </command>
      <command
            defaultHandler="net.thecodemaster.sap.ui.commands.DisableScanOnProject"
            id="net.thecodemaster.sap.ui.command.disable_plugin"
            name="%menu.disable_plugin.label">
      </command>
      <command
            defaultHandler="net.thecodemaster.sap.ui.commands.OpenSettingsPreferencePage"
            id="net.thecodemaster.sap.ui.command.open_settings"
            name="%menu.open_settings.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="net.thecodemaster.sap.ui.propertytester.EnableDisableMenu"
            id="net.thecodemaster.sap.ui.propertytester.EnableDisableMenu"
            namespace="net.thecodemaster.sap.ui.propertytester"
            properties="isEnabled, isDisabled"
            type="org.eclipse.jface.viewers.ISelection">
      </propertyTester>
   </extension>
   <extension
         id="Builder"
         name="TCMSA Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="net.thecodemaster.sap.builders.Builder">
         </run>
      </builder>
   </extension>
   <extension
         id="Nature"
         name="TCMSA Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="net.thecodemaster.sap.natures.Nature">
         </run>
      </runtime>
      <builder
            id="TheCodeMasterSecurityAnalyzerPlugin.Builder">
      </builder>
   </extension>
   <extension
         id="TCMSAMarker"
         name="Security Vulnerability"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <attribute
            name="TCMSA_TYPE_SECURITY_VULNERABILITY">
      </attribute>
   </extension>
   <extension
         id="TCMSAMarkerResolution"
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="net.thecodemaster.sap.markers.SecurityVulnerabilitiesResolutionGenerator"
            markerType="TheCodeMasterSecurityAnalyzerPlugin.TCMSAMarker">
      </markerResolutionGenerator>
   </extension>
   <extension
         id="TCMSAMarkerAnnotation"
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="1"
            markerType="TheCodeMasterSecurityAnalyzerPlugin.TCMSAMarker"
            name="TheCodeMasterSecurityAnalyzerPlugin.TCMSAMarkerAnnotation">
      </type>
   </extension>
   <extension
         id="TCMSAMarkerAnnotationSpecification"
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification annotationImageProvider="net.thecodemaster.sap.markers.ImageProvider"
			annotationType="TheCodeMasterSecurityAnalyzerPlugin.TCMSAMarkerAnnotation"
			colorPreferenceKey="org.eclipse.viatra2.slice.color" colorPreferenceValue="192,255,192"
			contributesToHeader="false" highlightPreferenceKey="org.eclipse.viatra2.slice.highlight"
			highlightPreferenceValue="true" icon="icons/SecurityVulnerability.png"
			includeOnPreferencePage="true" isGoToNextNavigationTarget="true"
			isGoToNextNavigationTargetKey="TCMSAIsGoToNextNavigationTarget"
			isGoToPreviousNavigationTarget="true"
			isGoToPreviousNavigationTargetKey="TCMSAIsGoToPreviousNavigationTarget"
			label="TCM Security Analyzer Warnings" overviewRulerPreferenceKey="org.eclipse.viatra2.slice.overview"
			overviewRulerPreferenceValue="true" presentationLayer="0"
			quickFixIcon="icons/SecurityVulnerability.png" showInNextPrevDropdownToolbarAction="true"
			showInNextPrevDropdownToolbarActionKey="TCMSAShowInNextPrevDropdownToolbarAction"
			symbolicIcon="warning" textPreferenceKey="org.eclipse.viatra2.slice.text"
			textPreferenceValue="true" textStylePreferenceKey="TCMSATextStylePreference"
			textStylePreferenceValue="BOX" verticalRulerPreferenceKey="org.eclipse.viatra2.slice.ruler"
			verticalRulerPreferenceValue="true">
		</specification>
   </extension>

</plugin>
